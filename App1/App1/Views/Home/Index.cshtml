@{
    ViewData["Title"] = "Application #1";
}

<nav style="margin-top: 15px;" class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">@ViewData["Title"]</a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                @if (!User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Register", "Home")">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Login", "Home")">Login</a>
                    </li>
                }
                else
                {
                    <script type="text/javascript">
                        window.location.href = "@Url.Action("Index", "Dashboard")";
                    </script>
                }
            </ul>
        </div>
    </div>
</nav>
