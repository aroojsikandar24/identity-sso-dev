@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyApplication</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/site.js"></script>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="app-identity-bar"></div>
        <div class="app-identity-badge">Application 1</div>
        @RenderBody()
    </div>

    <script>
        function silentSignIn() {

            var applicationUrl = '@Configuration["ApplicationUrl"]';
            var identityServerUrl = '@Configuration["IdentityServerApplicationUrl"]';

            var isUserLoggedIn = '@User.Identity.IsAuthenticated';
            if (isUserLoggedIn == 'False') {
                var iframe = document.createElement('iframe');
                iframe.id = 'silent-login-frame';
                iframe.style.display = "none";
                iframe.src = applicationUrl + "/Home/Login";

                iframe.onload = function () {
                    if (iframe.contentWindow.location.href !== undefined && iframe.contentWindow.location.href == applicationUrl + "/Dashboard") {
                        location.reload();
                    }
                };
                document.body.appendChild(iframe);
            }
        }

        document.addEventListener('DOMContentLoaded', function () {
            silentSignIn();
        });

        // setInterval(silentSignIn, 5000);
        // setInterval(silentSignOut, 5000);
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
